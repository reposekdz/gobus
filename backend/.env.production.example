# ===========================================
# GOBUS PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# SECURITY: This file contains PLACEHOLDER values only.
# DO NOT commit real secrets to source control!
# Copy this file to .env.production and fill in real values for deployment.

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://gobus.rw
API_BASE_URL=https://api.gobus.rw
ADMIN_URL=https://admin.gobus.rw
COMPANY_URL=https://company.gobus.rw
DRIVER_URL=https://driver.gobus.rw

# Database Configuration
MYSQL_HOST=your-mysql-host.example.com
MYSQL_PORT=3306
MYSQL_USER=your_db_user
MYSQL_PASSWORD=YOUR_SECURE_PASSWORD_HERE
MYSQL_DATABASE=gobus_production
MYSQL_CONNECTION_LIMIT=50
MYSQL_TIMEOUT=60000
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_RECONNECT=true

# Redis Configuration
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_DB=0
REDIS_CLUSTER_MODE=false
REDIS_MAX_RETRIES=3

# JWT Configuration (Generate strong random secrets for production!)
JWT_SECRET=YOUR_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=30d
JWT_ADMIN_SECRET=YOUR_ADMIN_JWT_SECRET_HERE
JWT_COMPANY_SECRET=YOUR_COMPANY_JWT_SECRET_HERE
JWT_DRIVER_SECRET=YOUR_DRIVER_JWT_SECRET_HERE

# Session Configuration
SESSION_SECRET=YOUR_SESSION_SECRET_HERE
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Email Configuration (Gmail/SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@gobus.rw
EMAIL_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE
EMAIL_FROM=GoBus Rwanda <noreply@gobus.rw>
EMAIL_ADMIN=admin@gobus.rw
EMAIL_SUPPORT=support@gobus.rw

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+250788123456
TWILIO_VERIFY_SERVICE_SID=YOUR_TWILIO_VERIFY_SID

# MTN Mobile Money Configuration (Rwanda)
MTN_API_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_COLLECTION_PRIMARY_KEY=YOUR_MTN_COLLECTION_PRIMARY_KEY
MTN_COLLECTION_SECONDARY_KEY=YOUR_MTN_COLLECTION_SECONDARY_KEY
MTN_COLLECTION_USER_ID=YOUR_MTN_COLLECTION_USER_ID
MTN_COLLECTION_API_KEY=YOUR_MTN_COLLECTION_API_KEY
MTN_DISBURSEMENT_PRIMARY_KEY=YOUR_MTN_DISBURSEMENT_PRIMARY_KEY
MTN_DISBURSEMENT_SECONDARY_KEY=YOUR_MTN_DISBURSEMENT_SECONDARY_KEY
MTN_DISBURSEMENT_USER_ID=YOUR_MTN_DISBURSEMENT_USER_ID
MTN_DISBURSEMENT_API_KEY=YOUR_MTN_DISBURSEMENT_API_KEY
MTN_CALLBACK_URL=https://api.gobus.rw/webhooks/mtn
MTN_ENVIRONMENT=sandbox

# Airtel Money Configuration (Rwanda)
AIRTEL_API_BASE_URL=https://openapiuat.airtel.africa
AIRTEL_CLIENT_ID=YOUR_AIRTEL_CLIENT_ID
AIRTEL_CLIENT_SECRET=YOUR_AIRTEL_CLIENT_SECRET
AIRTEL_GRANT_TYPE=client_credentials
AIRTEL_COUNTRY=RW
AIRTEL_CURRENCY=RWF
AIRTEL_CALLBACK_URL=https://api.gobus.rw/webhooks/airtel
AIRTEL_ENVIRONMENT=staging

# Stripe Configuration
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_CONNECT_CLIENT_ID=YOUR_STRIPE_CONNECT_CLIENT_ID

# Firebase Configuration (Push Notifications)
FIREBASE_PROJECT_ID=gobus-rwanda-production
FIREBASE_PRIVATE_KEY=YOUR_FIREBASE_PRIVATE_KEY_JSON
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@gobus-rwanda-production.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://gobus-rwanda-production-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=gobus-rwanda-production.appspot.com

# Google Services Configuration
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY
GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY
GOOGLE_DIRECTIONS_API_KEY=YOUR_GOOGLE_DIRECTIONS_API_KEY
GOOGLE_GEOCODING_API_KEY=YOUR_GOOGLE_GEOCODING_API_KEY

# AI/ML Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
CLAUDE_API_KEY=YOUR_CLAUDE_API_KEY
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,video/mp4
UPLOAD_PATH=./uploads
CLOUDINARY_CLOUD_NAME=gobus-rwanda
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET
AWS_S3_BUCKET=gobus-rwanda-files
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# Security Configuration
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Monitoring Configuration
ENABLE_METRICS=true
SENTRY_DSN=YOUR_SENTRY_DSN

# Advanced Features Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_DYNAMIC_PRICING=true
ENABLE_MOBILE_MONEY=true
ENABLE_BLOCKCHAIN_WALLET=false

# Blockchain Configuration (if enabled)
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_PRIVATE_KEY=YOUR_BLOCKCHAIN_PRIVATE_KEY
WEB3_PROVIDER_URL=YOUR_WEB3_PROVIDER_URL

# Social Media Integration
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET
TWITTER_API_KEY=YOUR_TWITTER_API_KEY
TWITTER_API_SECRET=YOUR_TWITTER_API_SECRET

# Analytics Configuration
GOOGLE_ANALYTICS_ID=YOUR_GA_ID
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN
